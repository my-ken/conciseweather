<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/daily_item">
    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textColor="#212121"
        android:gravity="center"/>
    <TextView
        android:id="@+id/weather_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textColor="#212121"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TextView
            android:id="@+id/separate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#212121"
            android:gravity="center"
            android:text="@string/separate_text"/>
        <TextView
            android:id="@+id/temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/separate_text"
            android:layout_toStartOf="@id/separate_text"
            android:textColor="#212121"
            android:gravity="center"/>
        <TextView
            android:id="@+id/temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/separate_text"
            android:layout_toEndOf="@id/separate_text"
            android:textColor="#212121"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/wind_dir"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:textColor="#212121"
        android:gravity="center"/>
    <TextView
        android:id="@+id/wind_sc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textColor="#212121"
        android:gravity="center"/>
</LinearLayout>